<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculator_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Theme Switcher -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbIcon="@drawable/ic_moon"/>

    <!-- Display -->
    <TextView
        android:id="@+id/equationText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/calculator_text"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@id/resultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="35dp"
        android:alpha="0.5"
        android:gravity="end"
        android:text=""
        android:textColor="@color/calculator_text"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/btnAC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Keypad -->
    <!-- Row 1 -->
    <Button
        android:id="@+id/btnAC"
        style="@style/CalculatorButton.Special"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPlusMinus"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnPlusMinus"
        style="@style/CalculatorButton.Special"
        android:text="+/-"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@id/btnAC"
        app:layout_constraintEnd_toStartOf="@id/btnPercent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnPercent"
        style="@style/CalculatorButton.Special"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btnPlusMinus"
        app:layout_constraintEnd_toStartOf="@id/btnDivide"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnDivide"
        style="@style/CalculatorButton.Operation"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/btnMultiply"
        app:layout_constraintStart_toEndOf="@id/btnPercent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <!-- Row 2 -->
    <Button
        android:id="@+id/btn7"
        style="@style/CalculatorButton.Default"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn8"
        style="@style/CalculatorButton.Default"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn9"
        style="@style/CalculatorButton.Default"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btnMultiply"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnMultiply"
        style="@style/CalculatorButton.Operation"
        android:text="×"
        app:layout_constraintBottom_toTopOf="@id/btnMinus"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <!-- Row 3 -->
    <Button
        android:id="@+id/btn4"
        style="@style/CalculatorButton.Default"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn5"
        style="@style/CalculatorButton.Default"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn6"
        style="@style/CalculatorButton.Default"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btnMinus"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnMinus"
        style="@style/CalculatorButton.Operation"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@id/btnPlus"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <!-- Row 4 -->
    <Button
        android:id="@+id/btn1"
        style="@style/CalculatorButton.Default"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/btnDot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn2"
        style="@style/CalculatorButton.Default"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn3"
        style="@style/CalculatorButton.Default"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@id/btnBackspace"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnPlus"
        style="@style/CalculatorButton.Operation"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@id/btnEquals"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <!-- Row 5 -->
    <Button
        android:id="@+id/btnDot"
        style="@style/CalculatorButton.Default"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn0"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btn0"
        style="@style/CalculatorButton.Default"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDot"
        app:layout_constraintEnd_toStartOf="@id/btnBackspace"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/btnBackspace"
        style="@style/CalculatorButton.Default"
        app:icon="@drawable/ic_backspace"
        app:iconGravity="textStart"
        app:iconTint="@color/calculator_text"
        android:contentDescription="Xóa ký tự"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintEnd_toStartOf="@id/btnEquals"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>


    <Button
        android:id="@+id/btnEquals"
        style="@style/CalculatorButton.Operation"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBackspace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>